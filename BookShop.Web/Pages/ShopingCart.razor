@page "/shopingCart"
@inject IBooksService BooksService
@inject ILocalStorageService LocalStorage

@if (CartItems != null && CartItems.Any())
{
    <div class="container">
        <h2>Koszyk</h2>
        <div class="row">
            <div class="col-md-12">
                <table class="table table-bordered table-striped table-hover text-center">
                    <thead>
                        <tr>
                            <th class="col-md-3">Miniaturka</th>
                            <th class="col-md-4">Tytuł</th>
                            <th class="col-md-1">Cena</th>
                            <th class="col-md-1">Ilość</th>
                            <th class="col-md-1">Usuń</th>
                        </tr>
                    </thead>
                    <tbody>
                        @foreach (var item in CartItems)
                        {
                            <tr>
                                <td>
                                    <a href="@($"/getBook/{item.BookId}")"><img src="@item.Image" class="img-thumbnail" style="width: 100px;" /></a>
                                </td>
                                <td>
                                    <a href="@($"/getBook/{item.BookId}")">@item.Title</a>
                                </td>
                                <td>
                                    @ItemPriceForQuantity(item.Price,item.Quantity) zł                              
                                </td>
                                <td>
                                    <input type="number" min="1" value="@item.Quantity" class="form-control text-center " />
                                </td>
                                <td>
                                    <button class="btn btn-sm btn-danger" @onclick="()=>DeleteItemCart(item)">Usuń</button>
                                </td>
                            </tr>
                        }
                    </tbody>
                </table>
            </div>
        </div>
    </div>
}
else
{
    <p>Koszyk jest pusty</p>
}

@code {

    private List<ShoppingCart> CartItems { get; set; }

    protected override async Task OnInitializedAsync()
    {
        CartItems = await BooksService.GetAllCart();
    }
    private async Task DeleteItemCart(ShoppingCart item)
    {
        var updatedCart = await BooksService.DeleteItem(item);
        if (updatedCart != null)
        {
            CartItems = updatedCart;
            StateHasChanged();
        }
    }
    private decimal ItemPriceForQuantity(decimal price, int quantity)
    {
        if (quantity > 1)
        {
            decimal x = (decimal)quantity;
            return price * x;
        }
        else
        {
            return price;
        }
    }

}
